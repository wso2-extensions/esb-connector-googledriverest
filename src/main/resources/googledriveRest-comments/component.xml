<component name="googledriveRest-comments" type="synapse/template">
    <subComponents>
        <component name="listComments">
            <file>listComments.xml</file>
            <description>Gets all the comments</description>
        </component>
        <component name="getComments">
            <file>getComments.xml</file>
            <description>Gets a comment by ID</description>
        </component>
        <component name="createComment">
            <file>createComment.xml</file>
            <description>Creates a new comment on the given file</description>
        </component>
        <component name="deleteComment">
            <file>deleteComment.xml</file>
            <description>Deletes a comment</description>
        </component>
        <component name="updateComment">
            <file>updateComment.xml</file>
            <description>Updates a comment</description>
        </component>
    </subComponents>
</component>